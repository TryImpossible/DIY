{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6", "dom", "dom.iterable"],
    "allowJs": true,
    "checkJs": true,
    "jsx": "react-native",
    "sourceMap": true,
    "outDir": "./dist/ts",
    "rootDir": "src",
    "removeComments": true,
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "*.config.js", ".*.js", ".vscode-test"]
}
