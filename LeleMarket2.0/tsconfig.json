{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "noEmit": false,
    "strict": true,
    "target": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "./dist/ts",
    "noImplicitAny": true,
    "module": "commonjs",
    "alwaysStrict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "*.config.js", ".vscode-test"]
}
